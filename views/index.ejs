<!DOCTYPE html>
<html ng-app="psqlTodo">
  <head>
    <title>Todo App Postgresql</title>
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body ng-controller="mainCtrl">
    <h1>PostgreSQL Todo</h1>
    <div class="container">
      <form ng-hide="editing" ng-submit="createTodo()">
        <div class="form-group">
          <input type="text" class="form-controll input-lg" placeholder="New Todo" ng-model="formData.text">
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Create Todo</button>
      </form>

      <form ng-show="editing" ng-submit="updateTodo()">
        <div class="form-group">
          <input type="text" class="form-controll input-lg" placeholder="New Todo" ng-model="formData.text">
        </div>
        <div class="form-group">
          <label for="true">Finished</label>
          <input type="radio" class="form-controll input-lg" placeholder="New Todo" value="true" ng-model="formData.complete">
          <label for="false">Incomplete</lael>
          <input type="radio" checked="checked" class="form-controll input-lg" placeholder="New Todo" value="false" ng-model="formData.complete">
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Update Todo</button>
      </form>

      <ul ng-repeat="todo in todoData">
        <li>
          <input type="checkbox" ng-click="deleteTodo(todo.id)">&nbsp;<span class="finished-{{todo.complete}}">{{ todo.text }}</span>
          <button ng-click="showEdit()">edit</button>
        </li>
      </ul>
    </div>
    <script src="http://code.jquery.com/jquery-1.11.2.min.js" type="text/javascript"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.12/angular.min.js"></script>
    <script src='javascripts/app.js'></script>
  </body>
</html>
